@model HKQTravelling.Models.Users

@{
    ViewData["Title"] = "Đăng ký";
}

<h2>Đăng ký</h2>

<form asp-action="Register" asp-controller="Account" method="post">
    <div class="form-group">
        <label for="UserName">Tên đăng nhập:</label>
        <input type="text" id="UserName" name="UserName" class="form-control" />
        <p class="text-danger">@ViewData["existed_user"]</p>
    </div>
    <div class="form-group">
        <label for="Password">Mật khẩu:</label>
        <input type="password" id="Password" name="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" />
        <p class="text-danger">@ViewData["existed_email"]</p>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Số điện thoại:</label>
        <input type="number" id="PhoneNumber" name="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Surname">Họ và tên lót:</label>
        <input type="text" id="Surname" name="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Tên:</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Gender">Giới tính:</label>
        <select class="form-control" id="Gender" name="Gender">
            <option value="Nam"> Nam </option>
            <option value="Nữ"> Nữ </option>
            <option value="Khác"> Khác </option>
        </select>
    </div>
    <div class="form-group">
        <label for="NiNumber">Số CCCD:</label>
        <input type="text" id="NiNumber" name="NiNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Birthdate">Ngày tháng năm sinh:</label>
        <input type="date" id="Birthdate" name="Birthdate" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>