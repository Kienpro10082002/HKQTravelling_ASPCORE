@model HKQTravelling.Models.EndLocations

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb {
    @{
        ViewData["BreadcrumbTitle"] = "Edit for end location";
    }
}

<h2>Edit</h2>

<h4>EndLocations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="EndLocationsAdministrator" asp-area="Admin" method="post">
            <input type="hidden" asp-for="EndLocationId" />
            <div class="form-group">
                <label asp-for="EndLocationName" class="control-label"></label>
                <input asp-for="EndLocationName" class="form-control" name="EndLocationName" value="@Model.EndLocationName"/>
                <p class="text-danger">@ViewData["validation_message"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "EndLocationsAdministrator", new { area = "Admin" })">Back to List</a>
</div>

